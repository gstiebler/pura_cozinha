    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/out/server/src/startServer.js",
            "cwd": "${workspaceRoot}",
			"env": {
				"NODE_ENV": "development"
			}
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceRoot}",
            "args": [
                "out/server/src/test", 
                "--no-timeouts"
                //,"-g", "order save"
            ],
			"env": {
				"NODE_ENV": "test"
                //"SHOW_GRAPHQL_QUERIES": "true"
			}
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Seed",
            "program": "${workspaceRoot}/out/db/seed.js",
            "cwd": "${workspaceRoot}",
            "args": [
            ],
			"env": {
				"NODE_ENV": "development"
			}
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}